{
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "sourceMap": true,
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": ".",
    "baseUrl": "."
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/*.test.ts"]
}
